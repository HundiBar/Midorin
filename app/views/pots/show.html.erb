<div class="container">
    <h1>It's me, <%= @pot.nickname %> </h1>
    <h3>I'm DATE old</h3>
        <div class="info section">
            <p class="general info">
                <%= image_tag @pot.plant.cover_picture %>
                Name: <%= @pot.plant.name %>
                Scientic name: <%= @pot.plant.scientific_name %>
                Description: <%= @pot.plant.description %>
                Care: <%= @pot.plant.care %>
                Temperature: <%= @pot.plant.temperature %>
                Light : <%= @pot.plant.light %>
                Toxicity: <%= @pot.plant.toxicity %>
                Water: <%= @pot.plant.watering_schedule %>
            </p>
        </div>
        <div class="d-flex justify-content-center align-items-center mt-18 mb-12">
            <%= link_to "Back to garden", pots_path, class:'btn btn-primary'%>
        </div>
        <div class="delete-icon">
            <%= link_to pots_path, method: :delete, data: { confirm: "Are you sure?"} do %>
            <i class="fas fa-trash"></i>
            <% end %>
        </div>
</div>
