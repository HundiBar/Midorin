
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon py-3">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "icons/apple-icon-76x76.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "My garden", pots_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Search", plants_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Messages", chatrooms_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">

        <% if current_user.avatar.attached? %>
           <%= image_tag current_user.avatar.variant(resize: "100x100!"), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
            <%= image_tag gravatar_image_url(current_user.email, size: 100), height: 100, widht: 100, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Sign out", destroy_user_session_path,:method => :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

