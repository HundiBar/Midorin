<div class="container mx my-5">
  <div>
    <%= simple_form_for @plant do |f| %>
      <%= f.input :image, as: :file %>
      <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= render 'shared/search-bar' %>

  <div class="results justify-content-center align-items-center ">
    <% if @query %>
      <h2>Results for <span style="color:#05ce91"><%= @query %></span></h2>
      <h4>We found <%= @plants.count == 1 ? "a plant" : "#{@plants.count} plants" %></h4>
    <% else %>
      <h1>All <%= Plant.count %> plants</h1>
    <% end %>
  </div>
  
  <div class="plants-list justify-content-center ">
    <% @plants.each do |plant|  %>
      <div class="card-product mb-3">
        <%= image_tag plant.cover_picture %>
        <div class="card-product-infos">
          <%= link_to plant_path(plant) do  %>
            <h1><%= plant.name %></h1>
            <h4><%= plant.scientific_name %></h4>
            <i><p>water and light icons</p></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


