<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag @plant.cover_picture, style: 'height:100%;width:100%;'%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <%= link_to plant_path(@plant) do  %>
          <h3 class="card-title"><%= @plant.name %></h3>
          <p class="card-text text-decoration-none"><%= @plant.description %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>